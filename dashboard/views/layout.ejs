<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title : 'Telegram Monitoring Dashboard' %></title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <!-- Custom CSS -->
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f8f9fa;
    }
    .sidebar {
      background-color: #212529;
      min-height: 100vh;
      position: fixed;
      top: 0;
      left: 0;
      width: 250px;
      padding: 20px 0;
      z-index: 100;
      transition: all 0.3s;
    }
    .sidebar .nav-link {
      color: rgba(255, 255, 255, 0.75);
      padding: 10px 20px;
      display: flex;
      align-items: center;
      gap: 10px;
    }
    .sidebar .nav-link:hover {
      color: white;
      background-color: rgba(255, 255, 255, 0.1);
    }
    .sidebar .nav-link.active {
      color: white;
      background-color: #0d6efd;
    }
    .sidebar-header {
      padding: 10px 20px;
      color: white;
      font-size: 1.25rem;
      margin-bottom: 20px;
    }
    .main-content {
      margin-left: 250px;
      padding: 20px;
      transition: all 0.3s;
    }
    .page-header {
      margin-bottom: 20px;
      padding-bottom: 10px;
      border-bottom: 1px solid #dee2e6;
    }
    @media (max-width: 768px) {
      .sidebar {
        margin-left: -250px;
      }
      .sidebar.active {
        margin-left: 0;
      }
      .main-content {
        margin-left: 0;
      }
      .main-content.pushed {
        margin-left: 250px;
      }
      .toggle-sidebar {
        display: block !important;
      }
    }
    .card {
      border-radius: 0.5rem;
      border: none;
      box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
      margin-bottom: 1.5rem;
    }
    .card-header {
      background-color: white;
      border-bottom: 1px solid rgba(0, 0, 0, 0.125);
      font-weight: 500;
    }
    .toggle-sidebar {
      display: none;
      position: fixed;
      top: 10px;
      left: 10px;
      z-index: 101;
    }
  </style>
  <!-- Any additional styles -->
  <%- defineContent('styles') %>
</head>
<body>
  <button class="toggle-sidebar btn btn-dark">
    <i class="bi bi-list"></i>
  </button>

  <!-- Sidebar -->
  <div class="sidebar">
    <div class="sidebar-header">
      <i class="bi bi-telegram"></i> Telegram Monitor
    </div>
    <ul class="nav flex-column">
      <li class="nav-item">
        <a class="nav-link <%= active === 'home' ? 'active' : '' %>" href="/">
          <i class="bi bi-speedometer2"></i> Dashboard
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link <%= active === 'accounts' ? 'active' : '' %>" href="/accounts">
          <i class="bi bi-person"></i> Accounts
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link <%= active === 'channels' ? 'active' : '' %>" href="/channels">
          <i class="bi bi-broadcast"></i> Channels
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link <%= active === 'diagnostics' ? 'active' : '' %>" href="/diagnostics">
          <i class="bi bi-tools"></i> Diagnostics
        </a>
      </li>
    </ul>
  </div>

  <!-- Main Content -->
  <div class="main-content">
    <div class="container-fluid">
      <%- body %>
    </div>
  </div>

  <!-- Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  
  <!-- Sidebar toggle script -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const toggleButton = document.querySelector('.toggle-sidebar');
      const sidebar = document.querySelector('.sidebar');
      const mainContent = document.querySelector('.main-content');
      
      toggleButton.addEventListener('click', function() {
        sidebar.classList.toggle('active');
        mainContent.classList.toggle('pushed');
      });
    });
  </script>

  <!-- Any additional scripts -->
  <%- defineContent('scripts') %>
</body>
</html> 